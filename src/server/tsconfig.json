{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "../../dist/server",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@env/*": ["../../env/*"]
    }
  }
}
