{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "build",
    "jsx": "react",
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["dom", "es2015"],
    "paths": {
      "@client/*": ["*"],
      "@shared/*": ["../shared/*"],
      "@env/*": ["../../env/*"]
    }
  }
}
