{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "noEmit": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "../../dist/server",
    "baseUrl": "./",
    "paths": {
      "@client/*": [
        "src/client/*"
      ],
      "@env/*": [
        "env/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  }
}